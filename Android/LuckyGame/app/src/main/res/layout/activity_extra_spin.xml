<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context="com.vasilkoff.luckygame.activity.ExtraSpinActivity">
    <data>
        <variable
            name="company"
            type="com.vasilkoff.luckygame.entity.Company"/>
        <variable
            name="place"
            type="com.vasilkoff.luckygame.entity.Place"/>
        <variable
            name="spin"
            type="com.vasilkoff.luckygame.entity.Spin"/>
        <variable
            name="favorites"
            type="Boolean" />
        <variable
            name="handler"
            type="com.vasilkoff.luckygame.binding.handler.ExtraHandler"/>
        <import type="android.view.View" alias="v"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="40dp"
        android:background="@drawable/shadow_small"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/coupon_top_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@{company.logo}"
                            android:layout_gravity="center_vertical"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{place.name}"
                            android:textColor="@color/colorLegendTitle"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/unlockClose"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cancel"
                    android:background="@null"
                    android:padding="3dp"
                    android:onClick="@{handler::back}"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line_hr"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/extra_spin_text1"
                    android:gravity="center"
                    android:textColor="@color/colorLegendTitle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/extra_spin_text2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorUnlockTextBlue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unlock_text2"
                    android:gravity="center"
                    android:textColor="@color/colorLegendTitle"/>
            </LinearLayout>

            <include
                layout="@layout/fb_button"
                bind:company = "@{company}"
                bind:handler = "@{handler}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/loseLineBg"
                android:padding="5dp"
                android:onClick="@{handler::favorites}">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorLegendTitle"
                    android:text="@string/add_to_favorites"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{favorites ? @drawable/heart_filled : @drawable/heart}"
                    android:onClick="@{handler::favorites}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unlock_text3"
                    android:gravity="center"
                    android:textColor="@color/colorLegendTitle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textColor="@color/colorUnlockTextBlue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unlock_text4"
                    android:gravity="center"
                    android:textColor="@color/colorLegendTitle"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/bg_bot"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_left"
                android:textColor="@color/colorUnlockExpired"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/colorUnlockExpired"
                android:textSize="16sp"
                android:text="@{spin.timeLeft}"/>

        </LinearLayout>




    </LinearLayout>
</layout>

