<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="handler"
            type="com.spindealsapp.binding.handler.FiltersHandler"/>
        <variable
            name="filterNearMe"
            type="Boolean"/>
        <variable
            name="filtersCount"
            type="Integer"/>
        <import type="android.view.View" alias="v"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="@{handler::search}"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                style="@style/FiltersText"
                android:textColor="@color/colorTabText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="@{handler::filterNearMe}"
            android:paddingTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@{filterNearMe ? @drawable/marker_icon_active : @drawable/marker_icon}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/near_me"
                style="@style/FiltersText"
                android:textColor="@{filterNearMe ? @color/colorTabTextSelected : @color/colorTabText}"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="@{handler::filters}">
            <ImageView
                android:id="@+id/filterIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filters"
                style="@style/FiltersText"
                android:layout_below="@+id/filterIcon"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:textColor="@color/colorFiltersText"
                android:gravity="center"
                android:textSize="10sp"
                android:background="@drawable/bg_count_green"
                android:layout_toEndOf="@+id/filterIcon"
                android:layout_marginLeft="-2dp"
                android:text="@{String.valueOf(filtersCount)}"
                android:visibility="@{filtersCount > 0 ? v.VISIBLE : v.GONE}"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
