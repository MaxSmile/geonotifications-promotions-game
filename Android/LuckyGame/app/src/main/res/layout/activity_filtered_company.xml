<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.vasilkoff.luckygame.activity.FilteredCompanyActivity">
    <data>
        <variable
            name="type"
            type="String" />
        <variable
            name="countResult"
            type="Boolean"/>
        <variable
            name="filterSearch"
            type="Boolean"/>
        <variable
            name="filterNearMe"
            type="Boolean"/>
        <variable
            name="filtersCount"
            type="Integer"/>
        <variable
            name="showSearch"
            type="Boolean"/>
        <variable
            name="handler"
            type="com.vasilkoff.luckygame.binding.handler.FilteredHandler" />
        <import type="android.view.View" alias="v"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cover_small">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:src="@drawable/back"
                        android:onClick="@{handler::back}"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/categoryTitle"
                        android:text="@{type}"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_gravity="center"/>
                <include
                    layout="@layout/filters"
                    app:handler="@{handler}"
                    app:filterSearch="@{filterSearch}"
                    app:filterNearMe="@{filterNearMe}"
                    app:filtersCount="@{filtersCount}"
                    app:showSearch="@{showSearch}"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_category"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="@{countResult ? v.GONE : v.VISIBLE}"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/filteredCompanyList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

        </LinearLayout>
        <include layout="@layout/preloader"/>
    </FrameLayout>

</layout>

