<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vasilkoff.luckygame.activity.DetailsActivity">
    <data>
        <variable
            name="company"
            type="com.vasilkoff.luckygame.entity.Company" />
        <import type="android.view.View" alias="v"/>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/detailsFooter">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image"
                    android:paddingTop="30dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:src="@drawable/back" />
                        <TextView                                                    android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@{company.name}"
                            android:textColor="@color/colorDetailsTitle"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_base"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/call_copy"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/call"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/info"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/direction"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/directions"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/web_copy"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/web"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/map"
                    android:layout_marginTop="-3dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@{company.logo}"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="@{company.name}"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="15sp"
                            android:text="@{company.typeName}"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/green_pin"/>
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@{company.icon}"/>
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorDetailsTextInfoBg"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textColor="@color/colorDetailsTextInfo"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{company.info}"
                        android:textColor="@color/colorDetailsTextInfo"
                        android:textSize="16sp"/>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_info"
                    android:text="@string/more_info"
                    android:textColor="@color/colorDetailsTextInfo"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:minHeight="0dp"
                    style="?android:attr/borderlessButtonStyle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorDetailsTextInfoBg"
                    android:padding="15dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/get_notified_for_spins"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="17sp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/favourites_red"
                            android:background="@null"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dont_wont_notifications"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="17sp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/checkbox"
                            android:background="@null"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/out_of_spins"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="17sp"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/plus_one"
                            android:background="@null"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/detailsFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bottom_base"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="12dp">
                <RelativeLayout
                    android:id="@+id/companyShowDetailsGifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClickDetails">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@{company.countPromo > 0 ? @drawable/gift_blue : @drawable/gift_grey}"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/companyDetailsGifts"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorDetailsTitle"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@drawable/bg_count_blue"
                        android:padding="1dp"
                        android:text="@{String.valueOf(company.countPromo)}"
                        android:layout_toEndOf="@+id/companyDetailsGifts"
                        android:visibility="@{company.countPromo > 0 ? v.VISIBLE : v.GONE}"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/spin_new"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/detailsBtnPlay" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/play"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorDetailsTitle"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6d, 4h, 40m"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorDetailsTextInfo"
                    android:layout_below="@+id/detailsBtnPlay"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="12dp">
                <RelativeLayout
                    android:id="@+id/companyShowDetailsCoupons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/companyDetailsCoupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cutting_coupon_big"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorDetailsTitle"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@drawable/bg_count_blue"
                        android:padding="1dp"
                        android:text="2"
                        android:layout_toEndOf="@+id/companyDetailsCoupons" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>
