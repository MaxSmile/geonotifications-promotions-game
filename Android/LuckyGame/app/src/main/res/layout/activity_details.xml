<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.spindealsapp.activity.DetailsActivity">
    <data>
        <variable
            name="company"
            type="com.spindealsapp.entity.Company" />
        <variable
            name="place"
            type="com.spindealsapp.entity.Place" />
        <variable
            name="countGift"
            type="int" />
        <variable
            name="countCoupons"
            type="int" />
        <variable
            name="other"
            type="boolean" />
        <variable
            name="handler"
            type="com.spindealsapp.binding.handler.DetailsHandler" />
        <import type="android.view.View" alias="v"/>
        <import type="com.spindealsapp.Constants"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/detailsFooter">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image">
                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/detailsSlider"
                        android:layout_width="match_parent"
                        app:indicator_visibility="visible"
                        android:layout_height="300dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:src="@drawable/back"
                            android:onClick="@{handler::back}"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@{company.name}"
                            android:textColor="@color/colorDetailsTitle"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_base"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/companyDetailsCall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{handler::call}">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/call_copy"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/call"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/companyDetailsInfo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{handler::info}">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/info"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/news"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:textColor="@color/colorDetailsTitle"
                            android:text="1"
                            android:textStyle="bold"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:visibility="@{place.infoChecked || place.infoTimestamp == 0 ? v.GONE : v.VISIBLE}"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/companyDetailsDirections"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{handler::directions}">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/direction"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/directions"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/companyDetailsWeb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{handler::web}">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/web_copy"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            style="@style/DetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/web"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/map"
                    android:layout_marginTop="-3dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@{company.logo}"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="@{place.name}"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="15sp"
                            android:text="@{place.typeName}"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{place.distanceString}"
                                android:paddingEnd="2dp"
                                android:textColor="@color/colorDetailsTextInfo"
                                android:visibility="@{place.distanceString != null ? v.VISIBLE : v.GONE}"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{place.city}"
                                android:textColor="@color/colorDetailsTextInfo"/>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/green_pin"/>
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@{place.typeIcon}"/>
                    </FrameLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/moreInfoBg"
                    android:onClick="@{handler::showOther}"
                    android:visibility="@{other ? v.VISIBLE : v.GONE}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_places"
                        android:textColor="@color/colorDetailsTextInfo"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/detailsArrowOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="25dp"/>
                </RelativeLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandableLayoutOther"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/colorDetailsTextInfoBg">
                    <ListView
                        android:id="@+id/detailsOtherPlaces"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:dividerHeight="0dp"/>

                </net.cachapa.expandablelayout.ExpandableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorDetailsTextInfoBg"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textColor="@color/colorDetailsTextInfo"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{place.about}"
                        android:textColor="@color/colorDetailsTextInfo"
                        android:textSize="16sp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/moreInfoBg"
                    android:onClick="@{handler::moreInfo}">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_info"
                        android:textColor="@color/colorDetailsTextInfo"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/detailsArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="25dp"/>
                </RelativeLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDetailsTextInfo"
                        android:textSize="16sp"
                        android:text="@{place.aboutMore}"/>

                </net.cachapa.expandablelayout.ExpandableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorDetailsTextInfoBg"
                    android:padding="15dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:onClick="@{handler::favorites}">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_to_favorites"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="17sp"
                            android:layout_centerVertical="true"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@{place.favorites ? @drawable/heart_filled : @drawable/heart}"
                            android:background="@null"
                            android:layout_alignParentEnd="true"
                            android:onClick="@{handler::favorites}"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dont_wont_notifications"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="17sp"
                            android:layout_centerVertical="true"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/checkbox"
                            android:background="@null"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:onClick="@{handler::getExtraSpin}">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/out_of_spins"
                            android:textColor="@color/colorDetailsTextInfo"
                            android:textSize="17sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/plus_one"
                            android:layout_alignParentEnd="true"
                            android:onClick="@{handler::getExtraSpin}"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/detailsFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bottom_base"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="2dp">
                <RelativeLayout
                    android:id="@+id/companyShowDetailsGifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{handler::showGifts}">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@{countGift > 0 ? @drawable/gift_blue : @drawable/gift_grey}"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/companyDetailsGifts"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorDetailsTitle"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@drawable/bg_count_blue"
                        android:padding="1dp"
                        android:text="@{String.valueOf(countGift)}"
                        android:layout_toEndOf="@+id/companyDetailsGifts"
                        android:visibility="@{countGift > 0 ? v.VISIBLE : v.GONE}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_gifts"
                        android:textSize="10sp"
                        android:layout_below="@+id/companyDetailsGifts"
                        android:layout_centerHorizontal="true"
                        android:textColor="@{countGift > 0 ? @color/giftTextActive : @color/giftDetailsText}"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_circle"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_wheel"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/detailsBtnPlay"
                    android:onClick="@{handler::goToPlay}"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_pointer"
                    android:layout_above="@+id/detailsBtnPlay"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/play"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorDetailsTitle"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="@{place.spinStatus == Constants.SPIN_STATUS_COMING  ? v.GONE : v.VISIBLE}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{place.spinTimeLeft}"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorDetailsTextInfo"
                    android:layout_below="@+id/detailsBtnPlay"
                    android:layout_centerHorizontal="true"
                    android:visibility="@{place.spinStatus == Constants.SPIN_STATUS_COMING || countGift == 0  ? v.GONE : v.VISIBLE}"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="2dp">
                <RelativeLayout
                    android:id="@+id/companyShowDetailsCoupons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{handler::showCoupons}">
                    <ImageView
                        android:id="@+id/companyDetailsCoupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@{countCoupons > 0 ? @drawable/cutting_coupon_big : @drawable/cutting_coupon_grey}"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:gravity="center"
                        android:textColor="@color/colorDetailsTitle"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@drawable/bg_count_blue"
                        android:padding="1dp"
                        android:text="@{String.valueOf(countCoupons)}"
                        android:layout_toEndOf="@+id/companyDetailsCoupons"
                        android:visibility="@{countCoupons > 0  ? v.VISIBLE : v.GONE}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_coupons"
                        android:textSize="10sp"
                        android:layout_below="@+id/companyDetailsCoupons"
                        android:layout_centerHorizontal="true"
                        android:textColor="@{countCoupons > 0 ? @color/giftTextActive : @color/giftDetailsText}"/>
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>
