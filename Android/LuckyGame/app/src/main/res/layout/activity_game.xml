<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vasilkoff.luckygame.activity.GameActivity">
    <data>
        <variable
            name="company"
            type="com.vasilkoff.luckygame.entity.Company" />
    </data>
    <RelativeLayout
        android:id="@+id/activity_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wheel_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gameHeader">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/gameBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:src="@drawable/back"
                    android:onClick="onClickGame"
                    android:padding="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@{company.logo}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{company.name}"
                        android:textColor="@color/colorDetailsTitle"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_title"
                android:textColor="@color/colorGameTitle"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/gameHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ProgressBar
                android:id="@+id/powerBar"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:minHeight="25dp"
                style="?android:attr/progressBarStyleHorizontal"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/progress_bar"/>
        </FrameLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wheel_border"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:scaleType="center"
            android:layout_gravity="center"
            android:id="@+id/imageCircle"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageWheel"
            android:src="@drawable/wheel"
            android:adjustViewBounds="false"
            android:scaleType="center"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/powerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wheel_button"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:scaleType="center"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imagePointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageWheel"
            android:src="@drawable/wheel_pointer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                >
                <Button
                    android:id="@+id/gamePlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Game"
                    android:onClick="onClickGame"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/gameWin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Win"
                    android:onClick="onClickGame"/>

                <Button
                    android:id="@+id/gameLose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lose"
                    android:onClick="onClickGame"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line_hr"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/gameShowDetailsGifts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickGame">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/gift_blue"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/gameDetailsGifts"
                            android:paddingTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:minWidth="20dp"
                            android:gravity="center"
                            android:textColor="@color/colorDetailsTitle"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:background="@drawable/bg_count_blue"
                            android:padding="1dp"
                            android:text="@{String.valueOf(company.countPromo)}"
                            android:layout_toEndOf="@+id/gameDetailsGifts"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/gameShowDetailsCoupons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/gameCoupons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cutting_coupon_big"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:minWidth="20dp"
                            android:gravity="center"
                            android:textColor="@color/colorDetailsTitle"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:background="@drawable/bg_count_blue"
                            android:padding="1dp"
                            android:text="7"
                            android:layout_toEndOf="@+id/gameCoupons" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>
</layout>
