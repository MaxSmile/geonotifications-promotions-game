<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="title"
            type="String"/>
        <variable
            name="countResult"
            type="Boolean"/>
        <variable
            name="showBg"
            type="Boolean"/>
        <variable
            name="back"
            type="Integer"/>
        <variable
            name="colorTitle"
            type="Integer"/>
        <variable
            name="handler"
            type="com.vasilkoff.luckygame.binding.handler.SearchHandler"/>
        <import type="android.view.View" alias="v"/>
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vasilkoff.luckygame.activity.SearchActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cover_small">
                <include
                    layout="@layout/header"
                    app:handler="@{handler}"
                    app:title="@{title}"
                    app:colorTitle="@{colorTitle}"
                    app:back="@{back}"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_bar"
                        android:textColor="@color/searchText"
                        android:textCursorDrawable="@null"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:hint="@string/search_placeholder"
                        android:textColorHint="@color/searchPlaceholder"
                        android:padding="5dp"
                        android:maxLines="1"
                        android:drawablePadding="5dp"/>
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/cancel_round_white"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:onClick="@{handler::clear}"/>
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/search_big_icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="@{showBg ? v.VISIBLE : v.GONE}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search_empty"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="@{countResult ? v.GONE : v.VISIBLE}"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/filteredCompanyList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
        <include layout="@layout/preloader"/>
   </FrameLayout>
</layout>