<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vasilkoff.luckygame.activity.GameActivity">
    <data>
        <variable
            name="company"
            type="com.vasilkoff.luckygame.entity.Company" />
        <variable
            name="place"
            type="com.vasilkoff.luckygame.entity.Place" />
        <variable
            name="spin"
            type="com.vasilkoff.luckygame.entity.Spin" />
        <variable
            name="countGift"
            type="Integer" />
        <variable
            name="countCoupons"
            type="Integer" />
        <variable
            name="favorites"
            type="Boolean" />
        <variable
            name="handler"
            type="com.vasilkoff.luckygame.binding.handler.GameHandler" />
        <import type="android.view.View" alias="v"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wheel_bg">

        <LinearLayout
            android:id="@+id/gameHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/gameBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:onClick="@{handler::back}"
                    android:padding="10dp"
                    android:src="@drawable/back" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@{company.logo}"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="@{company.name}"
                        android:textColor="@color/colorDetailsTitle"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/game_title"
                android:textColor="@color/colorGameTitle"
                android:textSize="15sp" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gameProgress"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">
                <ProgressBar
                    android:id="@+id/powerBar"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:minHeight="25dp"
                    android:minWidth="210dp"
                    style="?android:attr/progressBarStyleHorizontal"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_bar"/>
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/gameWheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="330dp"
            app:layout_constraintTop_toBottomOf="@+id/gameHeader"
            app:layout_constraintBottom_toTopOf="@+id/gameFooter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wheel_border"
                android:layout_centerInParent="true"
                android:adjustViewBounds="false"
                android:scaleType="center"
                android:layout_gravity="center"
                android:id="@+id/imageCircle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageWheel"
                android:adjustViewBounds="false"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/powerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wheel_button"
                android:layout_centerInParent="true"
                android:adjustViewBounds="false"
                android:scaleType="center"
                android:layout_gravity="center" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pointer_bg"/>
                <ImageView
                    android:id="@+id/imagePointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pointer_new"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/gameFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:minWidth="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:layout_margin="0dp"
                    android:visibility="@{spin != null ? v.VISIBLE : v.GONE}">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="@string/time_left"
                        android:textColor="@color/gameText"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:text="@{spin.timeLeft}"
                        android:textColor="@color/gameSubText"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:onClick="@{handler::getExtraSpin}">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="@string/game_out_of_spins"
                        android:textColor="@color/gameText"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:text="@string/game_get_extra_spins"
                        android:textColor="@color/gameSubText"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus_one"
                        android:onClick="@{handler::getExtraSpin}"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="@{handler::favorites}">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:text="@string/add_to_favorites"
                        android:textColor="@color/gameText"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@{favorites ? @drawable/heart_filled : @drawable/heart}"
                        android:onClick="@{handler::favorites}"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line_hr"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/gameShowDetailsGifts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{handler::showGifts}">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@{countGift > 0 ? @drawable/gift_blue : @drawable/gift_white}"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/gameDetailsGifts"
                            android:paddingTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:minWidth="20dp"
                            android:gravity="center"
                            android:textColor="@color/colorDetailsTitle"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:background="@drawable/bg_count_blue"
                            android:padding="1dp"
                            android:text="@{String.valueOf(countGift)}"
                            android:layout_toEndOf="@+id/gameDetailsGifts"
                            android:visibility="@{countGift > 0 ? v.VISIBLE : v.GONE}"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_gifts"
                            android:textSize="10sp"
                            android:layout_below="@+id/gameDetailsGifts"
                            android:layout_centerHorizontal="true"
                            android:textColor="@{countGift > 0 ? @color/giftTextActive : @color/giftGameText}"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/gameShowDetailsCoupons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{handler::showCoupons}">
                        <ImageView
                            android:id="@+id/gameCoupons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@{countCoupons > 0 ? @drawable/cutting_coupon_big : @drawable/cutting_coupon_white}"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:minWidth="20dp"
                            android:gravity="center"
                            android:textColor="@color/colorDetailsTitle"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:background="@drawable/bg_count_blue"
                            android:padding="1dp"
                            android:text="@{String.valueOf(countCoupons)}"
                            android:layout_toEndOf="@+id/gameCoupons"
                            android:visibility="@{countCoupons > 0  ? v.VISIBLE : v.GONE}"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_coupons"
                            android:textSize="10sp"
                            android:layout_below="@+id/gameCoupons"
                            android:layout_centerHorizontal="true"
                            android:textColor="@{countCoupons > 0 ? @color/giftTextActive : @color/giftGameText}"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
