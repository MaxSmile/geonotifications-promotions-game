<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vasilkoff.luckygame.activity.FilteredCompanyActivity">
    <data>
        <variable
            name="type"
            type="String" />
        <variable
            name="countResult"
            type="Boolean"/>
        <variable
            name="nearMe"
            type="Boolean"/>
        <variable
            name="filterCount"
            type="Integer"/>
        <variable
            name="handler"
            type="com.vasilkoff.luckygame.binding.handler.FilteredHandler" />
        <import type="android.view.View" alias="v"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cover_small">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:src="@drawable/back"
                        android:onClick="@{handler::back}"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/categoryTitle"
                        android:text="@{type}"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:id="@+id/homeSearch"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="@{handler::search}"
                        android:paddingTop="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/search_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/search"
                            style="@style/FiltersText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="@{handler::filterNearMe}"
                        android:paddingTop="10dp">
                        <ImageView
                            android:id="@+id/nearMeImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@{nearMe ? @drawable/marker_icon_active : @drawable/marker_icon}"/>
                        <TextView
                            android:id="@+id/nearMeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/near_me"
                            android:textColor="@{nearMe ? @color/colorTabTextSelected : @color/colorTabText}"
                            style="@style/FiltersText"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:onClick="@{handler::filters}">
                        <ImageView
                            android:id="@+id/filterIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/filter"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filters"
                            style="@style/FiltersText"
                            android:layout_below="@+id/filterIcon"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:textColor="@color/colorFiltersText"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:background="@drawable/bg_count_green"
                            android:layout_toEndOf="@+id/filterIcon"
                            android:layout_marginLeft="-2dp"
                            android:text="@{String.valueOf(filterCount)}"
                            android:visibility="@{filterCount > 0 ? v.VISIBLE : v.GONE}"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_category"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="@{countResult ? v.GONE : v.VISIBLE}"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/filteredCompanyList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

        </LinearLayout>
        <include layout="@layout/preloader"/>
    </FrameLayout>

</layout>

